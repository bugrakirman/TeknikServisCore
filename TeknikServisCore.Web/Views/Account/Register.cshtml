@model TeknikServisCore.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<style>
    #ff{
        margin:auto;
        margin-top:8%;
    }
    #fs {
        margin: auto;
        margin-top: 14%;
    }
    #next{
        
        position:relative;
        left:65.5%;

    }
    #previous {
        position: relative;
        left: 38.5%;
    }
    #submit{
        margin-left:59%;
        position:relative;
    }

</style>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js"></script>


<div class="container-fluid">
    <form class="form-horizontal" asp-controller="Account" asp-action="Register" asp-antiforgery="true" method="post">
        <div id="ff" class="col-md-6">
            <div class="form-group row">
                <label class="control-label col-md-3" asp-for="Name">İsim</label>
                <div class="col-md-9">
                    <input class="form-control" type="text" asp-for="Name" />
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3" asp-for="Surname">Soyisim</label>
                <div class="col-md-9">
                    <input class="form-control" type="text" asp-for="Surname" />
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3" asp-for="Email">Email</label>
                <div class="col-md-9">
                    <input class="form-control" type="text" asp-for="Email" />
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3" asp-for="EmailConfirmed">Email Tekrar</label>
                <div class="col-md-9">
                    <input class="form-control" type="text" asp-for="EmailConfirmed" />
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3" asp-for="PhoneNumber">Telefon</label>
                <div class="col-md-9">
                    <input class="form-control" type="text" asp-for="PhoneNumber" />
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3" asp-for="BirthDate">Doğum Tarihi</label>
                <div class="col-md-9">
                    <input class="form-control" type="text" asp-for="BirthDate" />
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3" asp-for="Address">Adres</label>
                <div class="col-md-9">
                    <input class="form-control" type="text" asp-for="Address" />
                </div>
            </div>
        </div>
        <div id="fs" class="col-md-6 hide">
            <div class="form-group row">
                <label class="control-label col-md-3" asp-for="UserName">Kullanıcı Adı </label>
                <div class="col-md-9">
                    <input class="form-control" type="text" asp-for="UserName" />
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3" asp-for="Password">Şifre</label>
                <div class="col-md-9">
                    <input class="form-control" type="text" asp-for="Password" />
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3" asp-for="ConfirmPassword">Şifre Tekrar</label>
                <div class="col-md-9">
                    <input class="form-control" type="text" asp-for="ConfirmPassword" />
                </div>
            </div>
        </div>

        <input id="previous" class="btn btn-info hide" type="button" value="Önceki Sayfa" />
        <input id="next" class="btn btn-info" type="button" value="Sonraki Sayfa" />
        <input id="submit" class="btn btn-success hide" type="submit" value="Kaydet" />

    </form>

</div>

@section scripts{

    <script>
        $(document).ready(function () {
            $("#previous").hide();
            $("#submit").hide();
            $("#fs").hide();

            $("#next").click(function () {
                $("#previous").show();
                $("#submit").show();
                $("#next").hide();
                $("#fs").show();
                $("#ff").hide();
            });
            $("#previous").click(function () {
                $("#previous").hide();
                $("#submit").hide();
                $("#next").show();
                $("#ff").show();
                $("#fs").hide();
            });
        });

    </script>
}
